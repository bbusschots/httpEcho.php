<!DOCTYPE HTML>
<html>
<head>
  <meta charset="utf-8" />
  <title>HTTP Echo</title>
  
  <!-- Include Bootstrap CSS from CDN -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <div class="row">
        <section class="col">
            <h1>Client</h1>
            
            <dl>
              <dt>IP</dt>
              <dd><code>{{client.ip}}</code></dd>
              <dt>Browser (User Agent String)</dt>
              <dd><code>{{client.userAgent}}</code></dd>
            </dl>
        </section>
    </div>
    <div class="row">
        <section class="col">
            <h1>HTTP Request</h1>
            
            <dl>
                <dt>URL</dt>
                <dd><code>{{request.url}}</code></dd>
                <dt>Protocol Version</dt>
                <dd><code>{{request.httpVersion}}</code></dd>
                <dt>Method</dt>
                <dd><code>{{request.method}}</code></dd>
                <dt>Headers <span class="badge badge-pill badge-primary">{{request.headerCount}}</span></dt>
                <dd>
                    {{# request.headerCount}}
                    <ul class="list-unstyled">
                        {{# request.headers}}
                        <li><code><strong>{{name}}:</strong> {{value}}</code></li>
                        {{/ request.headers}}
                    </ul>
                    {{/ request.headerCount}}
                    {{^ request.headerCount}}
                    <p class="text-muted">The request contained no headers.</p>
                    {{/ request.headerCount}}
                </dd>
                <dt>Query String</dt>
                <dd>
                    {{# request.queryString}}
                    <code>{{request.queryString}}</code>
                    {{/ request.queryString}}
                    {{^ request.queryString}}
                    <p class="text-muted">The request did not contain a query string.</p>
                    {{/ request.queryString}}
                </dd>
                <dt>Query Parameters <span class="badge badge-pill badge-primary">{{request.formDataCount}}</span></dt>
                <dd>
                    {{# request.queryParameterCount}}
                    <dl>
                        {{# request.queryParameters}}
                        <dt><code>{{name}}</code></dt>
                        <dd><code>{{value}}</code></dd>
                        {{/ request.queryParameters}}
                    </dl>
                    {{/ request.queryParameterCount}}
                    {{^ request.queryParameterCount}}
                    <p class="text-muted">The request contained no query parameters.</p>
                    {{/ request.queryParameterCount}}
                </dd>
                <dt>Form Data <span class="badge badge-pill badge-primary">{{request.formDataCount}}</span></dt>
                <dd>
                    {{# request.formDataCount}}
                    <dl>
                        {{# request.formData}}
                        <dt><code>{{name}}</code></dt>
                        <dd><code>{{value}}</code></dd>
                        {{/ request.formData}}
                    </dl>
                    {{/ request.formDataCount}}
                    {{^ request.formDataCount}}
                    <p class="text-muted">The request contained no form data.</p>
                    {{/ request.formDataCount}}
                </dd>
                <dt>Cookies <span class="badge badge-pill badge-primary">{{request.cookieCount}}</span></dt>
                <dd>
                    {{# request.cookieCount}}
                    <dl>
                        {{# request.cookies}}
                        <dt><code>{{name}}</code></dt>
                        <dd><code>{{value}}</code></dd>
                        {{/ request.cookies}}
                    </dl>
                    {{/ request.cookieCount}}
                    {{^ request.cookieCount}}
                    <p class="text-muted">The request contained no cookies.</p>
                    {{/ request.cookieCount}}
                </dd>
            </dl>
        </section>
    </div>
    <div class="row">
        <section class="col">
            <h1>Server</h1>
            
            <dl>
              <dt>IP:Port</dt>
              <dd><code>{{server.ip}}:{{server.port}}</code></dd>
              <dt>Name</dt>
              <dd><code>{{server.name}}</code></dd>
              <dt>Software</dt>
              <dd><code>{{server.software}}</code></dd>
              <dt>CGI Revision</dt>
              <dd><code>{{server.cgiRevision}}</code></dd>
            </dl>
        </section>
    </div>
</div>
</body>
</html>